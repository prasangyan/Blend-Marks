        <div id="search">
          <input type="text" name="searchcriteria" id="searchcriteria">
          <a href="#" id="SearchButton">Search</a>
        </div>
        <a href="/links/new" class="css3-button submit-link"><span>Submit Link</span></a>
    </header>
    <div class="clearfix"></div>
    <div id="main" role="main">
    <!-- Add Link form -->
    <% if @links.count() > 0 -%>
        <% @links.each do |link|%>
            <ul class="link">
                <li>
                    <a href="<%= link.link %>"><%= link.title %></a>
                    <ul class="sub-menu">
                        <li>Added by <a href="#" class="submitter-link"><%= User.find(link.user_id).email %></a> on <%= link.created_at.strftime("%d %M %Y") %></li>
                        <li>|</li>
                        <li><a href="#" class="comment-link">0 Comments</a></li>
                    </ul>
                </li>
                <li>
                  <div class="tags">
                    <a href="#"><%= Tag.find(link.tag_id).name %></a>
                  </div>
                </li>
            </ul>
        <% end %>
    <% end %>
