<div id="login-box-container">
    <div id="center">
        <%= image_tag "logo.png" %>
        <div id="login-box" class="WarpShadow WLarge WLight">
          <div class="forgot-password-information">
            <h4>Did you forget your password?</h4>
            <p>Enter your email address below and we'll send you your password reset instructions.</p>
          </div>
            <%= form_tag(:action => "forgotpassword")  do |f| %>
                <% if @error.nil? %>
                <% else %>
                  <div class="alert-error">
                    Please enter a valid email address.
                  </div>
                <% end %>
            <fieldset>
                <label>Enter your email address</label>
                <input type="text" class="small" name="username" maxlength="100" />
            </fieldset>
              <span class="menu-button"><a href="#" onclick="document.forms[0].submit();" class="css3-button">Email password reset instructions</a></span>
            <% end %>
        </div>
    </div>
</div>
