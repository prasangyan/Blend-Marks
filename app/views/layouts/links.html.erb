        <div></div>
    </div>
    <div class="secondary-content-sub-items">
        <h3>Browse by tag</h3>
        <div class="tags">
            <% Tag.find(:all).each do |t| %>
                <%= link_to t.name, "/tag/" + t.name %>
            <% end %>
        </div>
    </div>
    <footer>
    </footer>
    <%= render "layouts/loadingPanel" %>
</div>
<%= render :partial => "layouts/googleanalytics" %>
<%= stylesheet_link_tag "jquery.fancybox-1.3.4" %>
<%= javascript_include_tag "jquery-1.4.4.min" %>
<%= javascript_include_tag "jquery.mousewheel-3.0.4.pack" %>
