<body>
<div id="container">
    <!--- body -->
    <header>
        <%= image_tag 'logo.png' %>
        <!-- Search -->
        <div id="search">
          <input type="text" name="searchcriteria" id="searchcriteria">
          <a href="#" id="SearchButton">Search</a>
        </div>
        <%= link_to "<span>Submit Link</span>".html_safe, {:controller => "links", :action => "new" } , :class => "css3-button submit-link" %>
    </header>
    <div class="clearfix"></div>
    <%= yield %>
    <div class="secondary-content-highlight">
